#Working with text
def word_count(text):
    words = text.lower().split() 
    count_dict = {}

    for word in words:
        count_dict[word] = count_dict.get(word, 0) + 1

    frequent_words = [word for word, count in count_dict.items() if count > 3]

    return count_dict, frequent_words

text = input("Введіть рядок зі словами: ")
result, frequent = word_count(text)

print("Словник слів:", result)
print("Слова, що зустрічаються більше 3 разів:", frequent)

#Inventory of products
warehouse = {
    "яблуко": 10,
    "банан": 4,
    "груша": 2,
    "апельсин": 7
}
def update_product(name, amount):
    if name in warehouse:
        warehouse[name] += amount
    else:
        warehouse[name] = amount
    if warehouse[name] < 0:
        warehouse[name] = 0
def get_low_stock(threshold=5):
    return [product for product, count in warehouse.items() if count < threshold]

def show_warehouse():
    print("Склад після оновлення:", warehouse)
    print("Продукти з кількістю менше 5:", get_low_stock())
update_product("банан", -2)
update_product("груша", 3)
update_product("персик", 4)
show_warehouse()
